@model IEnumerable<Acme.WEB.Departamento>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Criar Departamento", "Create")
</p>
<table class="table bg-dark text-success">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.IdDepartamento }) |
            @Html.ActionLink("Details", "Details", new { id=item.IdDepartamento }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.IdDepartamento })
        </td>
    </tr>
}

</table>
